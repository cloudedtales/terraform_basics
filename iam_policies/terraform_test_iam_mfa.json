{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "VisualEditor0",
            "Effect": "Allow",
            "Action": [
                "s3:ListAllMyBuckets",
                "ec2:DescribeVpcs",
                "ec2:DescribeImages",
                "ec2:DescribeAccountAttributes",
                "ec2:DescribeVpcAttribute",
                "ec2:DescribeSubnets",
                "ec2:RunInstances",
                "ec2:DescribeRouteTables",
                "sts:DecodeAuthorizationMessage",
                "ec2:CreateTags",
                "ec2:DescribeInstances",
                "ec2:DescribeTags",
                "ec2:DescribeInstanceAttribute",
                "ec2:DescribeVolumes",
                "ec2:DescribeInstanceCreditSpecifications",
                "ec2:TerminateInstances"
            ],
            "Resource": "*"
        },
        {
            "Sid": "DenyAllIfNoMFA",
            "Effect": "Deny",
            "Action": "*",
            "Resource": "*",
            "Condition": {
                "BoolIfExists": {
                    "aws:MultiFactorAuthPresent": "false"
                }
            }
        }
    ]
}